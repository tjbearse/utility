# ~/.bashrc_ext: executed by .bashrc
# holds some personlizations separated for portablility

# adapted from https://bbs.archlinux.org/viewtopic.php?id=109234
# Magic Prompt 1.0.0
reset="\e[0m"
function next_hue
{
	color=$((31 + (++color % 7)))   # set 31 to 30 for dark on light
	PS1="\[\e[1;${color}m\]\\$ $reset" # set 1 to 0 for dark on light
}

bad="\e[1;31m"
good="\e[0;32m"


function prompt
{
	dir=""
	IFS='/' read -ra ADDR <<< "$(pwd)"
	dir=${ADDR[-1]}

	PS1="$reset\!.$dir\e[1;30;47m\$$reset "
}
PROMPT_COMMAND="prompt"

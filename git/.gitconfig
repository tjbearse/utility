[user]
	email = thomasb@qualtrics.com
	name = TJ Bearse
[push]
	default = simple
[core]
	editor = vim
	excludesfile = /Users/ThomasB/.gitignore_global
[color]
	ui = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
	co = checkout
	br = branch
	st = status
	cm = commit
	a = add
	branch-name= "!git rev-parse --abbrev-ref HEAD"
	npush = "!git push -u origin $(git branch-name)"

	f = "!git ls-files -m | sort -u | fzf -m"
	cof = "!git co -- $(git f)"
	af = "!git add -- $(git f)"
	# cob = "!git co $(git for-each-ref --format='%(refname)' refs/heads | sed 's#^refs/\w\+/##' | sort -u | fzf)"
